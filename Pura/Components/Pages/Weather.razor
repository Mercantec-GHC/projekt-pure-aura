@page "/postcreation"
@inject PostService PostService
@attribute [StreamRendering]

<PageTitle>Create Post</PageTitle>
<h1>Create Post</h1>

<EditForm Model="@post" OnValidSubmit="@HandleSubmit" FormName="Creation">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label>Title</label>
        <InputText @bind-Value="post.Title" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Description</label>
        <InputTextArea @bind-Value="post.Description" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Price</label>
        <InputText @bind-Value="post.Price" placeholder="$50" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
        @if (isSubmitting)
        {
            <span>Saving...</span>
        }
        else
        {

            <span>Submit Post</span>
        }
    </button>

    @if (!string.IsNullOrEmpty(message))
    {
        <div class="alert alert-success mt-3">@message</div>
    }
</EditForm>

@code {
    private PostModel post = new();
    private bool isSubmitting = false;
    private string? message;

    private async Task HandleSubmit()
    {
        isSubmitting = true;
        message = null;

        try
        {
            await PostService.CreatePostAsync(post.Title, post.Description, post.Price);
            message = "Post created successfully!";
            post = new(); // clear form
        }
        catch (Exception ex)
        {
            message = $"Error: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    public class PostModel
    {
        public string Title { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
        public string Price { get; set; } = string.Empty;
    }
}