@page "/"
@using Npgsql
@inject NpgsqlConnection Conn
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Pure Aura – Luxury Jewelry</PageTitle>



<header>
    <div class="logo">Pure Aura</div>
    <div class="menu-icon" title="Open menu" @onclick="() => DrawerOpen = true">☰</div>
</header>

@if (DrawerOpen)
{
    <div class="drawer-bg" @onclick="() => DrawerOpen = false"></div>

    <div class="drawer" @onclick:stopPropagation>
        <h3>Pure Aura</h3>

        <a href="#collections" @onclick="() => DrawerOpen = false">Collections</a>
        <a href="#featured" @onclick="() => DrawerOpen = false">Featured</a>
        <a href="#reviews" @onclick="() => DrawerOpen = false">Reviews</a>
        <a href="#about" @onclick="() => DrawerOpen = false">About</a>
        <a href="#contact" @onclick="() => DrawerOpen = false">Contact</a>

        <div class="spacer"></div>

        <a @onclick="() => { ShowLoginModal = true; DrawerOpen = false; }">Login</a>
        <a @onclick="() => { ShowSignupModal = true; DrawerOpen = false; }">Sign Up</a>
    </div>
}

<main>
    <!-- HERO -->
    <section class="hero" aria-label="Hero">
        <h1>Pure Aura</h1>
        <p>Dark Luxury — Timeless handcrafted jewelry designed to shine in the evening light.</p>

        <div class="hero-visual">
            <div class="placeholder" role="img" aria-label="Hero visual">
                Hero Image Placeholder — use a moody product photo here
            </div>
        </div>
    </section>

    <!-- COLLECTIONS -->
    <section id="collections" aria-labelledby="collections-heading">
        <div class="section-header">
            <h2 id="collections-heading">Collections</h2>
        </div>

        <div class="grid">
            <div class="card">
                <div class="product-visual">Image Placeholder</div>
                <div>
                    <h4>Everyday Essentials</h4>
                    <p>Sleek minimal pieces for daily wear.</p>
                </div>
            </div>

            <div class="card">
                <div class="product-visual">Image Placeholder</div>
                <div>
                    <h4>Bridal Glow</h4>
                    <p>Elegant jewelry for special moments.</p>
                </div>
            </div>

            <div class="card">
                <div class="product-visual">Image Placeholder</div>
                <div>
                    <h4>Statement Gems</h4>
                    <p>Bold pieces that stand out.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- FEATURED -->
    <section id="featured" aria-labelledby="featured-heading">
        <div class="section-header">
            <h2 id="featured-heading">Featured Jewelry</h2>
        </div>

        <div class="grid">
            <!-- PRODUCT 1 -->
            <div class="card">
                <div class="product-visual">Luna Necklace</div>
                <div>
                    <h4>Luna Necklace</h4>
                    <p>Freshwater pearl • gold finish</p>

                    <div class="price-row">
                        <strong>$149</strong>
                    </div>

                    <div class="card-actions">
                        <button class="go-btn" @onclick='() => AddToCart("Luna Necklace")'>Add to Cart</button>
                        <button class="wishlist-btn" @onclick='() => AddToWishlist("Luna Necklace")'>♥ Save</button>
                    </div>
                </div>
            </div>

            <!-- PRODUCT 2 -->
            <div class="card">
                <div class="product-visual">Sol Ring</div>
                <div>
                    <h4>Sol Ring</h4>
                    <p>Sterling silver • hammered texture</p>

                    <div class="price-row">
                        <strong>$89</strong>
                    </div>

                    <div class="card-actions">
                        <button class="go-btn" @onclick='() => AddToCart("Sol Ring")'>Add to Cart</button>
                        <button class="wishlist-btn" @onclick='() => AddToWishlist("Sol Ring")'>♥ Save</button>
                    </div>
                </div>
            </div>

            <!-- PRODUCT 3 -->
            <div class="card">
                <div class="product-visual">Aster Earrings</div>
                <div>
                    <h4>Aster Earrings</h4>
                    <p>Rose gold minimalist studs</p>

                    <div class="price-row">
                        <strong>$119</strong>
                    </div>

                    <div class="card-actions">
                        <button class="go-btn" @onclick='() => AddToCart("Aster Earrings")'>Add to Cart</button>
                        <button class="wishlist-btn" @onclick='() => AddToWishlist("Aster Earrings")'>♥ Save</button>
                    </div>
                </div>
            </div>
        </div> 
        <div class="go-btn">
            <NavLink class="nav-link" href="Market">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Show other products
            </NavLink>
        </div>
    </section> 

    <!-- REVIEWS -->
    <section id="reviews" aria-labelledby="reviews-heading">
        <div class="section-header">
            <h2 id="reviews-heading">Customer Reviews</h2>
        </div>

        <div class="card" style="margin-bottom:1rem;">
            <h3>Write a Review</h3>

            <input class="form-control" placeholder="Your Name" @bind="ReviewName" />

            <label style="display:block;margin-top:.4rem;">Rating:</label>
            <div style="margin:0.4rem 0;">
                @for (int i = 1; i <= 5; i++)
                {
                    <span class="star"
                          style="font-size:24px;cursor:pointer;color:@(i <= ReviewStars ? "#f4b400" : "#444");margin-right:6px;"
                          @onclick="() => ReviewStars = i">★</span>
                }
            </div>

            <textarea class="form-control" style="height:110px"
                      placeholder="Write your review..."
                      @bind="ReviewText"></textarea>

            <button class="go-btn" @onclick="SubmitReview">Submit Review</button>
        </div>

        <h3 style="margin-top:20px;color:var(--gold);">Recent Reviews</h3>

        @if (Reviews.Count == 0)
        {
            <p style="color:#bfb9ae">No reviews yet — be the first!</p>
        }
        else
        {
            <div class="grid">
                @foreach (var r in Reviews)
                {
                    <div class="review-card">
                        <strong>@r.Name</strong>
                        <div style="color:#f4b400;font-size:18px;margin:6px 0;">
                            @(new string('★', r.Stars) + new string('☆', 5 - r.Stars))
                        </div>
                        <p style="color:#cfc6b8">@r.Text</p>
                    </div>
                }
            </div>
        }
    </section>

    <!-- ABOUT -->
    <section id="about" aria-labelledby="about-heading">
        <div class="section-header">
            <h2 id="about-heading">About Pure Aura</h2>
        </div>

        <div class="card">
            <p>
                Pure Aura creates handcrafted jewelry inspired by minimalist beauty
                and natural radiance. Each piece is made with intention, using
                high-quality and sustainable materials.
            </p>
        </div>
    </section>

    <!-- CONTACT / FOOTER -->
    <footer id="contact" class="card" style="margin-top:2rem;">
        <p><strong>Contact Us</strong></p>
        <p>Email: hello@pureaura.example</p>
        <p>Phone: +1 (555) 123-4567</p>
        <br />
        <p style="color:#9f9789">© 2025 Pure Aura. All rights reserved.</p>
    </footer>
</main>

<!-- FLOATING ICONS -->
<div class="floating-icon wishlist-btn-floating" title="Wishlist" @onclick="ToggleWishlistModal">❤</div>
<div class="floating-icon cart-btn" title="Cart" @onclick="ToggleCartModal">🛒</div>

<!-- CART MODAL -->
@if (ShowCartModal)
{
    <div class="modal-bg" @onclick="() => ShowCartModal = false">
        <div class="modal-box" @onclick:stopPropagation>
            <h3>Your Cart</h3>

            @if (Cart.Count == 0)
            {
                <p>Your cart is empty.</p>
            }
            else
            {
                <ul>
                    @foreach (var item in Cart)
                    {
                        <li>@item</li>
                    }
                </ul>
            }

            <div style="display:flex;gap:.6rem;margin-top:1rem;">
                <button class="go-btn" @onclick="() => ShowCartModal = false">Close</button>
            </div>
        </div>
    </div>
}

<!-- WISHLIST MODAL -->
@if (ShowWishlistModal)
{
    <div class="modal-bg" @onclick="() => ShowWishlistModal = false">
        <div class="modal-box" @onclick:stopPropagation>
            <h3>Your Wishlist</h3>

            @if (Wishlist.Count == 0)
            {
                <p>No saved items.</p>
            }
            else
            {
                <ul>
                    @foreach (var item in Wishlist)
                    {
                        <li>@item</li>
                    }
                </ul>
            }

            <div style="display:flex;gap:.6rem;margin-top:1rem;">
                <button class="go-btn" @onclick="() => ShowWishlistModal = false">Close</button>
            </div>
        </div>
    </div>
}

<!-- LOGIN MODAL -->
@if (ShowLoginModal)
{
    <div class="modal-bg" @onclick="() => ShowLoginModal = false">
        <div class="modal-box" @onclick:stopPropagation>
            <h3>Login</h3>

            <EditForm Model="@LoginUser" OnValidSubmit="@HandleLogin">
                <DataAnnotationsValidator />

                <label style="font-weight:600">Username:</label>
                <InputText @bind-Value="LoginUser.Username" class="form-control" />

                <label style="font-weight:600">Password:</label>
                <InputText @bind-Value="LoginUser.CPassword" type="password" class="form-control" />

                @if (!string.IsNullOrEmpty(LoginError))
                {
                    <div style="color:#ff6b6b;margin-top:.5rem;">@LoginError</div>
                }

                @if (LoginSuccess)
                {
                    <div style="color:#9be19b;margin-top:.5rem;">Login successful!</div>
                }

                <div style="display:flex;gap:.6rem;margin-top:.8rem;">
                    <button class="go-btn" type="submit">Login</button>
                    <button class="go-btn" style="background:#777;color:#fff" @onclick="() => ShowLoginModal = false">Cancel</button>
                </div>
            </EditForm>
        </div>
    </div>
}

<!-- SIGNUP MODAL -->
@if (ShowSignupModal)
{
    <div class="modal-bg" @onclick="() => ShowSignupModal = false">
        <div class="modal-box" @onclick:stopPropagation>
            <h3>Sign Up</h3>

            <EditForm Model="@SignupUser" OnValidSubmit="@HandleSignup">
                <DataAnnotationsValidator />

                <label style="font-weight:600">Username:</label>
                <InputText @bind-Value="SignupUser.Username" class="form-control" />

                <label style="font-weight:600">Password:</label>
                <InputText @bind-Value="SignupUser.CPassword" type="password" class="form-control" />

                <label style="font-weight:600">Confirm Password:</label>
                <InputText @bind-Value="SignupConfirm" type="password" class="form-control" />

                @if (!string.IsNullOrEmpty(SignupError))
                {
                    <div style="color:#ff6b6b;margin-top:.5rem;">@SignupError</div>
                }

                @if (SignupSuccess)
                {
                    <div style="color:#9be19b;margin-top:.5rem;">Account created! You can now login.</div>
                }

                <div style="display:flex;gap:.6rem;margin-top:.8rem;">
                    <button class="go-btn" type="submit">Sign Up</button>
                    <button class="go-btn" style="background:#777;color:#fff" @onclick="() => ShowSignupModal = false">Cancel</button>
                </div>
            </EditForm>
        </div>
    </div>
}

@code {
    /* ---------------- DRAWER ---------------- */
    private bool DrawerOpen = false;

    /* ---------------- CART ---------------- */
    private List<string> Cart = new();
    private bool ShowCartModal = false;
    void AddToCart(string itemName)
    {
        Cart.Add(itemName);
        // Optionally open cart after adding
        ShowCartModal = true;
    }
    void ToggleCartModal() => ShowCartModal = !ShowCartModal;

    /* ---------------- WISHLIST ---------------- */
    private List<string> Wishlist = new();
    private bool ShowWishlistModal = false;

    void AddToWishlist(string itemName)
    {
        if (!Wishlist.Contains(itemName))
            Wishlist.Add(itemName);
        // Optionally show wishlist
        ShowWishlistModal = true;
    }

    void ToggleWishlistModal() => ShowWishlistModal = !ShowWishlistModal;

    /* ---------------- LOGIN ---------------- */
    private bool ShowLoginModal = false;
    private UserModel LoginUser = new();
    private bool LoginSuccess = false;
    private string LoginError = "";

    private async Task HandleLogin()
    {
        LoginError = "";
        LoginSuccess = false;

        try
        {
            await Conn.OpenAsync();
            using var cmd = new NpgsqlCommand(@"
                SELECT username
                FROM Users
                WHERE username=@u AND password_hash = crypt(@p, password_hash);
            ", Conn);

            cmd.Parameters.AddWithValue("@u", LoginUser.Username ?? "");
            cmd.Parameters.AddWithValue("@p", LoginUser.CPassword ?? "");

            var result = await cmd.ExecuteScalarAsync();
            await Conn.CloseAsync();

            if (result != null)
            {
                LoginSuccess = true;
                // keep modal visible a moment to show success
                await Task.Delay(900);
                ShowLoginModal = false;
                LoginUser = new UserModel();
            }
            else
            {
                LoginError = "Invalid username or password.";
            }
        }
        catch (Exception ex)
        {
            LoginError = "Login error. Please try again.";
            try { await Conn.CloseAsync(); } catch { }
            Console.Error.WriteLine(ex);
        }
    }

    /* ---------------- SIGNUP ---------------- */
    private bool ShowSignupModal = false;
    private UserModel SignupUser = new();
    private string SignupConfirm = "";
    private bool SignupSuccess = false;
    private string SignupError = "";

    private async Task HandleSignup()
    {
        SignupError = "";
        SignupSuccess = false;

        if (SignupUser.CPassword != SignupConfirm)
        {
            SignupError = "Passwords do not match.";
            return;
        }

        try
        {
            await Conn.OpenAsync();
            using var cmd = new NpgsqlCommand(@"
                INSERT INTO Users(username, password_hash)
                VALUES(@u, crypt(@p, gen_salt('bf')));", Conn);

            cmd.Parameters.AddWithValue("@u", SignupUser.Username ?? "");
            cmd.Parameters.AddWithValue("@p", SignupUser.CPassword ?? "");

            await cmd.ExecuteNonQueryAsync();
            SignupSuccess = true;

            await Task.Delay(900);
            ShowSignupModal = false;
            SignupUser = new UserModel();
            SignupConfirm = "";
        }
        catch (PostgresException ex) when (ex.SqlState == "23505")
        {
            SignupError = "Username already exists.";
        }
        catch (Exception ex)
        {
            SignupError = "Signup failed. Please try again.";
            Console.Error.WriteLine(ex);
        }
        finally
        {
            try { await Conn.CloseAsync(); } catch { }
        }
    }

    /* ---------------- MODELS ---------------- */
    public class UserModel
    {
        public string Username { get; set; } = "";
        public string CPassword { get; set; } = "";
    }

    /* ---------------- REVIEWS ---------------- */
    private class ReviewModel
    {
        public string Name { get; set; } = "";
        public int Stars { get; set; }
        public string Text { get; set; } = "";
    }

    private List<ReviewModel> Reviews = new();
    private string ReviewName = "";
    private string ReviewText = "";
    private int ReviewStars = 0;

    void SubmitReview()
    {
        if (string.IsNullOrWhiteSpace(ReviewName) ||
            string.IsNullOrWhiteSpace(ReviewText) ||
            ReviewStars == 0)
        {
            // silently ignore — or set an inline error state
            return;
        }

        Reviews.Insert(0, new ReviewModel
        {
            Name = ReviewName,
            Stars = ReviewStars,
            Text = ReviewText
        });

        ReviewName = "";
        ReviewText = "";
        ReviewStars = 0;
    }
}
