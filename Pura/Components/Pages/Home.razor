@page "/"
@using Npgsql
@inject NpgsqlConnection Conn
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Pure Aura – Luxury Jewelry</PageTitle>

<style>
    /* ================= DARK LUXURY THEME ================= */
    :root {
        --black: #0b0b0c;
        --deep: #111113;
        --gold: #d4af37;
        --gold-soft: #c9a53a;
        --text: #e8e3d8;
        --mid: #1a1a1c;
        --card: #141416;
        --soft-border: rgba(255,255,255,0.06);
        --glow: 0 0 20px rgba(212,175,55,0.25);
    }

    /* Reset + base */
    * {
        box-sizing: border-box;
    }

    body {
        margin: 0;
        font-family: "Inter", system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
        background: var(--black);
        color: var(--text);
        overflow-x: hidden;
    }

    a {
        color: inherit;
    }

    h1, h2, h3, h4 {
        color: var(--gold);
        letter-spacing: 0.5px;
        font-weight: 600;
        margin: 0 0 .6rem 0;
    }

    p {
        margin: 0 0 1rem 0;
        color: #c9c5ba;
    }

    /* ================= HEADER ================= */
    header {
        position: fixed;
        top: 0;
        width: 100%;
        padding: 1rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: linear-gradient(180deg, rgba(255,255,255,0.02), rgba(0,0,0,0.35));
        backdrop-filter: blur(8px);
        border-bottom: 1px solid var(--soft-border);
        z-index: 1000;
    }

    .logo {
        font-size: 1.9rem;
        font-weight: 700;
        color: var(--gold);
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    .menu-icon {
        font-size: 30px;
        cursor: pointer;
        color: var(--gold);
        transition: 0.25s;
        user-select: none;
    }

        .menu-icon:hover {
            transform: scale(1.08);
        }

    /* ================= DRAWER NAV ================= */
    .drawer-bg {
        position: fixed;
        inset: 0;
        background: rgba(0,0,0,0.6);
        backdrop-filter: blur(6px);
        z-index: 1500;
        animation: fadeIn 0.25s ease-out;
    }

    .drawer {
        position: fixed;
        top: 0;
        left: 0;
        width: 300px;
        max-width: 85%;
        height: 100%;
        background: linear-gradient(180deg, #0f0f10, #111113);
        border-right: 1px solid var(--soft-border);
        padding: 2rem 1.6rem;
        animation: slideIn 0.32s ease-out;
        box-shadow: 6px 0 30px rgba(0,0,0,0.5);
        z-index: 1600;
        display: flex;
        flex-direction: column;
    }

        .drawer h3 {
            color: var(--gold);
            margin-bottom: 1.5rem;
            font-size: 1.4rem;
            letter-spacing: 1px;
        }

        .drawer a {
            display: block;
            color: var(--text);
            text-decoration: none;
            padding: 0.9rem 0;
            font-size: 1.05rem;
            transition: 0.18s;
            border-bottom: 1px solid rgba(255,255,255,0.02);
        }

            .drawer a:hover {
                color: var(--gold);
                padding-left: 8px;
            }

        .drawer .spacer {
            flex: 1;
        }

    keyframes slideIn {
        from {
            transform: translateX(-100%);
        }
        to {
            transform: translateX(0);
        }
    }
    keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    /* ================= PAGE LAYOUT ================= */
    main {
        padding: 6.5rem 2rem 3rem; /* account for fixed header */
        max-width: 1200px;
        margin: 0 auto;
    }

    /* HERO */
    .hero {
        padding: 3rem 1rem 2rem;
        text-align: center;
        background: radial-gradient(circle at center, #19191a 0%, #0b0b0c 90%);
        border-radius: 14px;
        border: 1px solid rgba(255,255,255,0.02);
        box-shadow: inset 0 0 120px rgba(212,175,55,0.03);
    }

        .hero h1 {
            font-size: 3.4rem;
            text-shadow: var(--glow);
        }

        .hero p {
            max-width: 640px;
            margin: 0.4rem auto 1.2rem;
            font-size: 1.15rem;
            color: #c9c5ba;
        }

    .hero-visual {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-top: 1.3rem;
        flex-wrap: wrap;
    }

    .placeholder {
        width: 100%;
        max-width: 880px;
        height: 300px;
        background: linear-gradient(135deg, #1e1e21, #141416);
        border: 1px solid rgba(255,255,255,0.03);
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #777;
        font-size: 1.05rem;
    }

    /* ================= GRID & CARDS ================= */
    section {
        margin-top: 2rem;
    }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1rem;
    }

        .section-header h2 {
            margin: 0;
            font-size: 1.6rem;
        }

    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(260px,1fr));
        gap: 1.6rem;
        margin-top: 0.8rem;
    }

    .card {
        background: linear-gradient(180deg, rgba(255,255,255,0.01), rgba(255,255,255,0.02));
        border: 1px solid var(--soft-border);
        padding: 1.4rem;
        border-radius: 14px;
        transition: 260ms ease;
        box-shadow: 0 0 20px rgba(0,0,0,0.35);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .card:hover {
            transform: translateY(-8px);
            box-shadow: 0 0 40px rgba(212,175,55,0.12);
        }

    .product-visual {
        height: 180px;
        border-radius: 12px;
        background: linear-gradient(135deg,#151516,#1b191a);
        border: 1px solid rgba(255,255,255,0.02);
        display: flex;
        align-items: center;
        justify-content: center;
        color: #777;
        margin-bottom: 1rem;
    }

    .price-row {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-top: .6rem;
    }

        .price-row strong {
            font-size: 1.05rem;
            color: var(--text);
        }

    .card-actions {
        margin-top: 1rem;
        display: flex;
        gap: .6rem;
        flex-wrap: wrap;
    }

    /* ================= BUTTONS ================= */
    .go-btn {
        padding: 10px 18px;
        background: var(--gold);
        color: #000;
        border: none;
        border-radius: 28px;
        cursor: pointer;
        font-weight: 700;
        transition: 160ms;
    }

        .go-btn:hover {
            background: var(--gold-soft);
            box-shadow: var(--glow);
            transform: translateY(-3px);
        }

    .wishlist-btn {
        padding: 10px 14px;
        background: transparent;
        color: var(--gold);
        border: 1px solid rgba(212,175,55,0.18);
        border-radius: 28px;
        cursor: pointer;
        font-weight: 700;
    }

        .wishlist-btn:hover {
            background: rgba(212,175,55,0.04);
            transform: translateY(-3px);
        }

    /* ================= FLOATING ICONS ================= */
    .floating-icon {
        position: fixed;
        bottom: 22px;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 26px;
        cursor: pointer;
        box-shadow: var(--glow);
        transition: 0.2s;
        z-index: 1400;
    }

    .cart-btn {
        right: 20px;
        background: var(--gold);
        color: #000;
    }

    .wishlist-btn-floating {
        right: 96px;
        background: transparent;
        border: 2px solid var(--gold);
        color: var,--gold);
    }

    .floating-icon:hover {
        transform: translateY(-4px);
    }

    /* ================= MODALS ================= */
    .modal-bg {
        position: fixed;
        inset: 0;
        background: rgba(0,0,0,0.75);
        backdrop-filter: blur(8px);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 2000;
    }

    .modal-box {
        background: linear-gradient(180deg,#0f0f10,#101012);
        padding: 1.6rem;
        border-radius: 12px;
        width: 92%;
        max-width: 480px;
        border: 1px solid var(--soft-border);
        box-shadow: 0 10px 50px rgba(0,0,0,0.6);
    }

    .form-control {
        width: 100%;
        padding: 0.6rem 0.8rem;
        margin: 0.6rem 0 0.8rem 0;
        border-radius: 8px;
        background: #0b0b0c;
        border: 1px solid rgba(255,255,255,0.03);
        color: var(--text);
    }

    /* REVIEWS */
    .review-card {
        background: linear-gradient(180deg,#121214,#0f0f10);
        border: 1px solid var(--soft-border);
        border-radius: 12px;
        padding: 1rem;
        box-shadow: 0 6px 30px rgba(0,0,0,0.45);
    }

    .star:hover {
        transform: scale(1.1);
        transition: 0.1s;
        cursor: pointer;
    }

    footer {
        text-align: center;
        padding: 2rem 1rem;
        margin-top: 2rem;
        background: transparent;
        border-top: 1px solid var(--soft-border);
    }

    /* Small screens tweak */
    media (max-width: 640px) {
        .hero h1 {
            font-size: 2.4rem;
        }

        header {
            padding: 0.8rem 1rem;
        }
    }
</style>

