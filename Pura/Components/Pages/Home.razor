@if (ShowLoginModal)
{
    <div class="modal-bg">
        <div class="modal-box">
            <h3>Login</h3>
            <EditForm Model="@Users" OnValidSubmit="@HandleSubmit">
                <DataAnnotationsValidator />

                <div class="mb-3">
                    <label>Username:</label>
                    <InputText @bind-Value="Users.Username" class="form-control" />
                    <ValidationMessage For="@(() => Users.Username)" />
                </div>

                <div class="mb-3">
                    <label>Password:</label>
                    <InputText @bind-Value="Users.CPassword" type="password" class="form-control" />
                    <ValidationMessage For="@(() => Users.CPassword)" />
                </div>

                <button class="go-btn" type="submit">Submit</button>
                <button class="go-btn" style="margin-left:10px;background:#777" @onclick="() => ShowLoginModal = false">Cancel</button>
            </EditForm>

            @if (showSuccess)
            {
                <div class="alert alert-success mt-4">
                    Hello <strong>@Users.Username</strong>! Login successful.
                </div>
            }
            else if (!string.IsNullOrEmpty(ErrorMessage))
            {
                <div class="alert">@ErrorMessage</div>
            }
        </div>
    </div>
}

@if (ShowCartModal)
{
    <div class="modal-bg">
        <div class="modal-box">
            <h3>Your Cart</h3>

            @if (Cart.Count == 0)
            {
                <p>Your cart is empty.</p>
            }
            else
            {
                <ul>
                    @foreach (var item in Cart)
                    {
                        <li>@item</li>
                    }
                </ul>
            }

            <button class="go-btn" @onclick="() => ShowCartModal = false">Close</button>
        </div>
    </div>
}

@code {
    [Inject] NavigationManager Navigation { get; set; } = default!;

    private List<string> Cart = new();
    private bool ShowCartModal = false;
    private bool ShowLoginModal = false;

    private bool showSuccess = false;
    private string ErrorMessage = "";
    private UserModel Users = new();

    void AddToCart(string itemName)
    {
        Cart.Add(itemName);
    }

    void ToggleCartModal()
    {
        ShowCartModal = !ShowCartModal;
    }

    void GoToCounter()
    {
        Navigation.NavigateTo("/Market");
    }

    private async Task HandleSubmit()
    {
        showSuccess = false;
        ErrorMessage = "";

        try
        {
            await Conn.OpenAsync();

            using var cmd = new NpgsqlCommand(@"
                SELECT upassword
                FROM public.""Users""
                WHERE username = @u;
            ", Conn);

            cmd.Parameters.AddWithValue("@u", Users.Username);

            var result = await cmd.ExecuteScalarAsync();

            if (result is string storedHash && !string.IsNullOrEmpty(storedHash))
            {
                // Requires BCrypt.Net-Next NuGet package
                var verified = BCrypt.Net.BCrypt.Verify(Users.CPassword, storedHash);

                if (verified)
                {
                    showSuccess = true;
                }
                else
                {
                    ErrorMessage = "Invalid username or password.";
                }
            }
            else
            {
                ErrorMessage = "Invalid username or password.";
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            await Conn.CloseAsync();
        }
    }

    public class UserModel
    {
        public string Username { get; set; } = "";
        public string CPassword { get; set; } = "";
    }
}

sql db/check_pgcrypto.sql
SELECT extname, extversion
FROM pg_extension
WHERE extname = 'pgcrypto';

sql db/check_users_table.sql
SELECT table_schema, table_name
FROM information_schema.tables
WHERE lower(table_name) = 'users';

sql db/create_pgcrypto.sql
