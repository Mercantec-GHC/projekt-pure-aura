        inset: 0;
        background: rgba(0,0,0,0.4);
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .modal-box {
        background: white;
        padding: 2rem;
        border-radius: 10px;
        width: 350px;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 6px;
        margin-bottom: 10px;
    }

    ul {
        text-align: left;
        padding-left: 0;
    }

        ul li {
            list-style: none;
            background: #f5f5f5;
            padding: 8px;
            border-radius: 6px;
