@page "/"
@using Npgsql
@inject NpgsqlConnection Conn
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Home - Pure Aura</PageTitle>

<style>
    /* ===== Global Styles ===== */
    body {
        font-family: "Inter", sans-serif;
        margin: 0;
        background: #f8f5f2;
        color: #2e2e2e;
    }

    h1, h2, h3, h4 {
        color: #b89472;
        letter-spacing: 0.5px;
    }

    /* ===== Header ===== */
    header {
        position: sticky;
        top: 0;
        z-index: 1000;
        padding: 1rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: #ffffffd9;
        backdrop-filter: blur(8px);
        border-bottom: 1px solid #e6e1dc;
    }

    .logo {
        font-size: 1.8rem;
        font-weight: 700;
        color: #b89472;
        letter-spacing: 1px;
    }

    nav a {
        margin-left: 1rem;
        text-decoration: none;
        color: #2e2e2e;
        font-weight: 500;
        padding: 0.4rem 0.8rem;
        border-radius: 6px;
        transition: 0.2s;
    }

        nav a:hover {
            background: #e9e3df;
        }

    /* ===== Hero ===== */
    .hero {
        padding: 4rem 2rem;
        text-align: center;
    }

        .hero h1 {
            margin: 0;
            font-size: 3.2rem;
        }

    .placeholder {
        width: 100%;
        height: 250px;
        background: #e5e2df;
        border-radius: 14px;
        display: flex;
        justify-content: center;
        align-items: center;
        color: #8f8b88;
        font-size: 1.1rem;
        margin-bottom: 1rem;
        transition: 0.25s;
    }

    /* ===== Cards & Layout ===== */
    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px,1fr));
        gap: 1.5rem;
    }

    .card {
        background: #fff;
        padding: 1.4rem;
        border-radius: 14px;
        box-shadow: 0 4px 18px rgba(0,0,0,0.06);
        transition: 0.25s;
    }

    /* ===== Buttons ===== */
    .go-btn {
        padding: 10px 20px;
        background: #b89472;
        color: white;
        border: none;
        border-radius: 25px;
        font-size: 0.95rem;
        cursor: pointer;
        transition: 0.25s;
    }

    .wishlist-btn {
        padding: 10px 16px;
        background: #dfc8b3;
        color: #5e4a39;
        border: none;
        border-radius: 25px;
        margin-left: 8px;
        cursor: pointer;
        font-weight: bold;
        transition: 0.25s;
    }

    /* ===== Floating Round Icon Buttons ===== */
    .floating-icon {
        position: fixed;
        bottom: 20px;
        width: 62px;
        height: 62px;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        color: white;
        font-size: 26px;
        cursor: pointer;
        box-shadow: 0 5px 20px rgba(0,0,0,0.25);
        transition: 0.25s;
        font-weight: bold;
    }

    .cart-btn {
        right: 20px;
        background: #b89472;
    }

        .cart-btn:hover {
            background: #a88361;
            transform: translateY(-3px);
        }

    .wishlist-btn-floating {
        right: 100px;
        background: #d4b79a;
    }

        .wishlist-btn-floating:hover {
            background: #c6a88f;
            transform: translateY(-3px);
        }

    /* ===== Modals ===== */
    .modal-bg {
        position: fixed;
        inset: 0;
        background: rgba(0,0,0,0.35);
        display: flex;
        justify-content: center;
        align-items: center;
        backdrop-filter: blur(3px);
        z-index: 2000;
    }

    .modal-box {
        background: #fff;
        padding: 2rem;
        border-radius: 14px;
        width: 90%;
        max-width: 420px;
        box-shadow: 0 6px 20px rgba(0,0,0,0.15);
        animation: fadeUp 0.2s ease-out;
    }

    /* ===== Reviews (Better Spacing) ===== */
    #reviews {
        padding-top: 1rem;
    }

    .review-card {
        padding: 1.4rem;
        background: white;
        border-radius: 14px;
        box-shadow: 0 3px 12px rgba(0,0,0,0.07);
        line-height: 1.6;
        margin-bottom: 15px;
    }

        .review-card strong {
            font-size: 1.1rem;
        }

    .star:hover {
        transform: scale(1.15);
        transition: 0.1s;
    }

</style>

