        <div class="modal-box" @onclick:stopPropagation>
            <h3>Sign Up</h3>

            <EditForm Model="@SignupUser" OnValidSubmit="@HandleSignup">
                <DataAnnotationsValidator />

                <label style="font-weight:600">Username:</label>
                <InputText @bind-Value="SignupUser.Username" class="form-control" />

                <label style="font-weight:600">Password:</label>
                <InputText @bind-Value="SignupUser.CPassword" type="password" class="form-control" />

                <label style="font-weight:600">Confirm Password:</label>
                <InputText @bind-Value="SignupConfirm" type="password" class="form-control" />

                @if (!string.IsNullOrEmpty(SignupError))
                {
                    <div style="color:#ff6b6b;margin-top:.5rem;">@SignupError</div>
                }

                @if (SignupSuccess)
                {
                    <div style="color:#9be19b;margin-top:.5rem;">Account created! You can now login.</div>
                }

                <div style="display:flex;gap:.6rem;margin-top:.8rem;">
                    <button class="go-btn" type="submit">Sign Up</button>
                    <button class="go-btn" style="background:#777;color:#fff" @onclick="() => ShowSignupModal = false">Cancel</button>
                </div>
            </EditForm>
        </div>
    </div>
}

@code {
    /* ---------------- DRAWER ---------------- */
    private bool DrawerOpen = false;

    /* ---------------- CART ---------------- */
    private List<string> Cart = new();
    private bool ShowCartModal = false;
    void AddToCart(string itemName)
    {
        Cart.Add(itemName);
        // Optionally open cart after adding
        ShowCartModal = true;
    }
    void ToggleCartModal() => ShowCartModal = !ShowCartModal;

    /* ---------------- WISHLIST ---------------- */
    private List<string> Wishlist = new();
    private bool ShowWishlistModal = false;

    void AddToWishlist(string itemName)
    {
        if (!Wishlist.Contains(itemName))
            Wishlist.Add(itemName);
        // Optionally show wishlist
        ShowWishlistModal = true;
    }

    void ToggleWishlistModal() => ShowWishlistModal = !ShowWishlistModal;

    /* ---------------- LOGIN ---------------- */
    private bool ShowLoginModal = false;
    private UserModel LoginUser = new();
    private bool LoginSuccess = false;
    private string LoginError = "";

    private async Task HandleLogin()
    {
        LoginError = "";
        LoginSuccess = false;

        try
        {
            await Conn.OpenAsync();
            using var cmd = new NpgsqlCommand(@"
                SELECT username
                FROM Users
                WHERE username=@u AND password_hash = crypt(@p, password_hash);
            ", Conn);

            cmd.Parameters.AddWithValue("@u", LoginUser.Username ?? "");
            cmd.Parameters.AddWithValue("@p", LoginUser.CPassword ?? "");

            var result = await cmd.ExecuteScalarAsync();
            await Conn.CloseAsync();

            if (result != null)
            {
                LoginSuccess = true;
                // keep modal visible a moment to show success
                await Task.Delay(900);
                ShowLoginModal = false;
                LoginUser = new UserModel();
            }
            else
            {
                LoginError = "Invalid username or password.";
            }
        }
        catch (Exception ex)
        {
            LoginError = "Login error. Please try again.";
            try { await Conn.CloseAsync(); } catch { }
            Console.Error.WriteLine(ex);
        }
    }

    /* ---------------- SIGNUP ---------------- */
    private bool ShowSignupModal = false;
    private UserModel SignupUser = new();
    private string SignupConfirm = "";
    private bool SignupSuccess = false;
    private string SignupError = "";

    private async Task HandleSignup()
    {
        SignupError = "";
        SignupSuccess = false;

        if (SignupUser.CPassword != SignupConfirm)
        {
            SignupError = "Passwords do not match.";
            return;
        }

        try
        {
            await Conn.OpenAsync();
            using var cmd = new NpgsqlCommand(@"
                INSERT INTO Users(username, password_hash)
                VALUES(@u, crypt(@p, gen_salt('bf')));", Conn);

            cmd.Parameters.AddWithValue("@u", SignupUser.Username ?? "");
            cmd.Parameters.AddWithValue("@p", SignupUser.CPassword ?? "");

            await cmd.ExecuteNonQueryAsync();
            SignupSuccess = true;

            await Task.Delay(900);
            ShowSignupModal = false;
            SignupUser = new UserModel();
            SignupConfirm = "";
        }
        catch (PostgresException ex) when (ex.SqlState == "23505")
        {
            SignupError = "Username already exists.";
        }
        catch (Exception ex)
        {
            SignupError = "Signup failed. Please try again.";
            Console.Error.WriteLine(ex);
        }
        finally
        {
            try { await Conn.CloseAsync(); } catch { }
        }
    }

