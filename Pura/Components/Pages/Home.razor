@page "/"
@using Npgsql
@inject NpgsqlConnection Conn
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Pure Aura – Luxury Jewelry</PageTitle>

<style>
    /* ================= DARK GREY LUXURY THEME ================= */
    :root {
        --bg-dark: #1e1e1e;
        --bg-mid: #2b2b2b;
        --bg-light: #3a3a3a;
        --gold: #d4af37;
        --gold-soft: #c9a53a;
        --text: #e8e3d8;
        --text-muted: #aaaaaa;
        --border: rgba(255,255,255,0.08);
        --glow: 0 0 20px rgba(212,175,55,0.25);
    }

    body {
        margin: 0;
        font-family: "Inter", system-ui;
        background: var(--bg-dark);
        color: var(--text);
        overflow-x: hidden;
    }

    a {
        color: inherit;
        text-decoration: none;
    }

    h1, h2, h3, h4 {
        color: var(--gold);
        font-weight: 600;
        margin-bottom: .6rem;
    }

    /* ================= HEADER ================= */
    header {
        position: fixed;
        width: 100%;
        top: 0;
        padding: 1rem 2rem;
        display: flex;
        justify-content: center;
        background: var(--bg-mid);
        border-bottom: 1px solid var(--border);
        z-index: 1000;
        border-radius: 0 0 12px 12px;
    }

    .logo {
        font-size: 1.9rem;
        font-weight: 700;
        color: var(--gold);
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    main {
        padding: 6rem 2rem 3rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    /* ================= HERO ================= */
    .hero {
        padding: 3rem 1rem 2rem;
        text-align: center;
        background: var(--bg-mid);
        border: 1px solid var(--border);
        border-radius: 14px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.3);
        margin-bottom: 2rem;
    }

        .hero h1 {
            font-size: 3rem;
            text-shadow: var(--glow);
        }

        .hero p {
            color: var(--text-muted);
            font-size: 1.1rem;
        }

    .placeholder {
        margin-top: 1.3rem;
        height: 280px;
        border-radius: 16px;
        background: linear-gradient(135deg,#2f2f2f,#222);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--text-muted);
    }

    /* ================= GRID & CARDS ================= */
    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fill,minmax(260px,1fr));
        gap: 1.6rem;
        margin-top: 1rem;
    }

    .card {
        background: var(--bg-mid);
        border: 1px solid var(--border);
        padding: 1.4rem;
        border-radius: 14px;
        display: flex;
        flex-direction: column;
        transition: transform 0.2s, background 0.2s;
    }

        .card:hover {
            transform: translateY(-4px);
            background: var(--bg-light);
        }

    .product-visual {
        height: 180px;
        border-radius: 12px;
        background: linear-gradient(135deg,#2c2c2c,#3b3b3b);
        border: 1px solid var(--border);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--text-muted);
        margin-bottom: 1rem;
        font-weight: 500;
    }

    /* ================= BUTTONS ================= */
    .go-btn {
        padding: 10px 18px;
        background: var(--gold);
        color: #000;
        border-radius: 25px;
        border: none;
        font-weight: 700;
        cursor: pointer;
        transition: background 0.2s;
        margin-top: 0.5rem;
    }

        .go-btn:hover {
            background: var(--gold-soft);
        }

    .wishlist-btn {
        padding: 10px 14px;
        background: transparent;
        border: 1px solid var(--gold);
        color: var(--gold);
        border-radius: 25px;
        font-weight: 700;
        cursor: pointer;
        transition: background 0.2s;
        margin-top: 0.5rem;
    }

        .wishlist-btn:hover {
            background: rgba(212,175,55,0.08);
        }

    /* ================= FLOATING ICONS ================= */
    .floating-icon {
        position: fixed;
        bottom: 22px;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 26px;
        cursor: pointer;
        z-index: 1400;
        background: var(--bg-mid);
        border: 1px solid var(--border);
        transition: transform 0.2s, background 0.2s;
    }

        .floating-icon:hover {
            transform: scale(1.1);
            background: var(--bg-light);
        }

    .cart-btn {
        right: 20px;
        background: var(--gold);
        color: #000;
        border: none;
    }

    .wishlist-btn-floating {
        right: 96px;
        border: 2px solid var(--gold);
        color: var(--gold);
    }

    /* ================= MODALS ================= */
    .modal-bg {
        position: fixed;
        inset: 0;
        background: rgba(0,0,0,0.75);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 2000;
    }

    .modal-box {
        background: var(--bg-mid);
        border: 1px solid var(--border);
        padding: 1.6rem;
        width: 90%;
        max-width: 480px;
        border-radius: 12px;
    }

    .form-control {
        width: 100%;
        padding: .6rem .8rem;
        border-radius: 8px;
        border: 1px solid rgba(255,255,255,0.06);
        background: var(--bg-dark);
        color: var(--text);
        margin-bottom: .8rem;
    }

    /* ================= FOOTER ================= */
    footer {
        margin-top: 2rem;
        padding: 2rem 1rem;
        text-align: center;
        background: var(--bg-mid);
        border-top: 1px solid var(--border);
        border-radius: 12px;
    }
</style>

<header>
    <div class="logo">Pure Aura</div>
    <div class="menu-icon" @onclick="() => DrawerOpen = true">☰</div>
</header>

@if (DrawerOpen)
{
    <div class="drawer-bg" @onclick="() => DrawerOpen = false"></div>

    <div class="drawer" @onclick:stopPropagation>
        <h3 style="color:var(--gold);margin-bottom:1rem;">Navigation</h3>

        <a href="#collections" @onclick="() => DrawerOpen = false">Collections</a>
        <a href="#featured" @onclick="() => DrawerOpen = false">Featured</a>
        <a href="#reviews" @onclick="() => DrawerOpen = false">Reviews</a>
        <a href="#about" @onclick="() => DrawerOpen = false">About</a>
        <a href="#contact" @onclick="() => DrawerOpen = false">Contact</a>

        <div style="flex:1"></div>

        <a @onclick="() => { ShowLoginModal = true; DrawerOpen = false; }">Login</a>
        <a @onclick="() => { ShowSignupModal = true; DrawerOpen = false; }">Sign Up</a>
    </div>
}

<main>
    <!-- HERO -->
    <section class="hero">
        <h1>Pure Aura</h1>
        <p>Dark Luxury — handcrafted jewelry made to shine in any light.</p>
        <div class="placeholder">Hero Image Placeholder</div>
    </section>

    <!-- COLLECTIONS -->
    <section id="collections">
        <h2>Collections</h2>

        <div class="grid">
            <div class="card">
                <div class="product-visual">Image</div>
                <h4>Everyday Essentials</h4>
                <p>Minimal pieces for daily elegance.</p>
            </div>

            <div class="card">
                <div class="product-visual">Image</div>
                <h4>Bridal Glow</h4>
                <p>Refined jewelry for your special day.</p>
            </div>

            <div class="card">
                <div class="product-visual">Image</div>
                <h4>Statement Gems</h4>
                <p>Bold gems that make an impact.</p>
            </div>
        </div>
    </section>

    <!-- FEATURED -->
    <section id="featured">
        <h2>Featured Jewelry</h2>

        <div class="grid">
            <div class="card">
                <div class="product-visual">Luna Necklace</div>
                <h4>Luna Necklace</h4>
                <p>Freshwater pearl • gold finish</p>
                <strong>$149</strong>

                <button class="go-btn" @onclick='() => AddToCart("Luna Necklace")'>Add to Cart</button>
                <button class="wishlist-btn" @onclick='() => AddToWishlist("Luna Necklace")'>♥ Save</button>
            </div>

            <div class="card">
                <div class="product-visual">Sol Ring</div>
                <h4>Sol Ring</h4>
                <p>Sterling silver • hammered texture</p>
                <strong>$89</strong>

                <button class="go-btn" @onclick='() => AddToCart("Sol Ring")'>Add to Cart</button>
                <button class="wishlist-btn" @onclick='() => AddToWishlist("Sol Ring")'>♥ Save</button>
            </div>

            <div class="card">
                <div class="product-visual">Aster Earrings</div>
                <h4>Aster Earrings</h4>
                <p>Rose gold minimalist studs</p>
                <strong>$119</strong>

                <button class="go-btn" @onclick='() => AddToCart("Aster Earrings")'>Add to Cart</button>
                <button class="wishlist-btn" @onclick='() => AddToWishlist("Aster Earrings")'>♥ Save</button>
            </div>
        </div>
    </section>

    <!-- REVIEWS -->
    <section id="reviews">
        <h2>Customer Reviews</h2>

        <div class="card" style="margin-bottom:1.2rem;">
            <h3>Write a Review</h3>

            <input class="form-control" placeholder="Your Name" @bind="ReviewName" />

            <div style="margin:.4rem 0;">
                @for (int i = 1; i <= 5; i++)
                {
                    <span class="star"
                          style="font-size:24px;cursor:pointer;color:@(i <= ReviewStars ? "#f4b400" : "#444");margin-right:6px;"
                          @onclick="() => ReviewStars = i">
                        ★
                    </span>
                }
            </div>

            <textarea class="form-control" style="height:100px" placeholder="Write your review..." @bind="ReviewText"></textarea>

            <button class="go-btn" @onclick="SubmitReview">Submit Review</button>
        </div>

        @if (Reviews.Count == 0)
        {
            <p style="color:#bfb9ae;">No reviews yet — be the first!</p>
        }
        else
        {
            <div class="grid">
                @foreach (var r in Reviews)
                {
                    <div class="card">
                        <strong>@r.Name</strong>
                        <div style="color:#f4b400;">@(new string('★', r.Stars))</div>
                        <p style="color:#ccc;">@r.Text</p>
                    </div>
                }
            </div>
        }
    </section>

    <!-- ABOUT -->
    <section id="about">
        <h2>About Pure Aura</h2>
        <div class="card">
            <p>Pure Aura crafts elegant, minimalist jewelry designed to enhance natural beauty.</p>
        </div>
    </section>

    <!-- CONTACT -->
    <footer id="contact" class="card" style="margin-top:2rem;text-align:center;">
        <p><strong>Contact Us</strong></p>
        <p>Email: hello@pureaura.example</p>
        <p>© 2025 Pure Aura</p>
    </footer>
</main>

<!-- Floating Buttons -->
<div class="floating-icon wishlist-btn-floating" @onclick="ToggleWishlistModal">❤</div>
<div class="floating-icon cart-btn" @onclick="ToggleCartModal">🛒</div>

<!-- CART MODAL -->
@if (ShowCartModal)
{
    <div class="modal-bg" @onclick="() => ShowCartModal = false">
        <div class="modal-box" @onclick:stopPropagation>
            <h3>Your Cart</h3>

            @if (Cart.Count == 0)
            {
                <p>Your cart is empty.</p>
            }
            else
            {
                <ul>
                    @foreach (var item in Cart)
                    {
                        <li>@item</li>
                    }
                </ul>
            }

            <button class="go-btn" @onclick="() => ShowCartModal = false">Close</button>
        </div>
    </div>
}

<!-- WISHLIST MODAL -->
@if (ShowWishlistModal)
{
    <div class="modal-bg" @onclick="() => ShowWishlistModal = false">
        <div class="modal-box" @onclick:stopPropagation>
            <h3>Your Wishlist</h3>

            @if (Wishlist.Count == 0)
            {
                <p>No saved items.</p>
            }
            else
            {
                <ul>
                    @foreach (var item in Wishlist)
                    {
                        <li>@item</li>
                    }
                </ul>
            }

            <button class="go-btn" @onclick="() => ShowWishlistModal = false">Close</button>
        </div>
    </div>
}

<!-- LOGIN & SIGNUP MODALS -->
@if (ShowLoginModal)
{
    <div class="modal-bg" @onclick="() => ShowLoginModal = false">
        <div class="modal-box" @onclick:stopPropagation>
            <h3>Login</h3>

            <EditForm Model="@LoginUser" OnValidSubmit="@HandleLogin">
                <DataAnnotationsValidator />

                <label>Username:</label>
                <InputText @bind-Value="LoginUser.Username" class="form-control" />
                <label>Password:</label>
                <InputText @bind-Value="LoginUser.CPassword" type="password" class="form-control" />

                @if (!string.IsNullOrEmpty(LoginError))
                {
                    <div style="color:#ff6b6b">@LoginError</div>
                }
                @if (LoginSuccess)
                {
                    <div style="color:#9be19b">Login successful!</div>
                }

                <button class="go-btn" type="submit">Login</button>
            </EditForm>
        </div>
    </div>
}

@if (ShowSignupModal)
{
    <div class="modal-bg" @onclick="() => ShowSignupModal = false">
        <div class="modal-box" @onclick:stopPropagation>
            <h3>Sign Up</h3>

            <EditForm Model="@SignupUser" OnValidSubmit="@HandleSignup">
                <DataAnnotationsValidator />

                <label>Username:</label>
                <InputText @bind-Value="SignupUser.Username" class="form-control" />
                <label>Password:</label>
                <InputText @bind-Value="SignupUser.CPassword" type="password" class="form-control" />
                <label>Confirm Password:</label>
                <InputText @bind-Value="SignupConfirm" type="password" class="form-control" />

                @if (!string.IsNullOrEmpty(SignupError))
                {
                    <div style="color:#ff6b6b">@SignupError</div>
                }
                @if (SignupSuccess)
                {
                    <div style="color:#9be19b">Account created! You can now login.</div>
                }

                <button class="go-btn" type="submit">Sign Up</button>
            </EditForm>
        </div>
    </div>
}

@code {
    /* ------------------- DRAWER ------------------- */
    private bool DrawerOpen = false;

    /* ------------------- CART ------------------- */
    private List<string> Cart = new();
    private bool ShowCartModal = false;

    void AddToCart(string item)
    {
        Cart.Add(item);
        ShowCartModal = true;
    }

    void ToggleCartModal() => ShowCartModal = !ShowCartModal;

    /* ------------------- WISHLIST ------------------- */
    private List<string> Wishlist = new();
    private bool ShowWishlistModal = false;

    void AddToWishlist(string item)
    {
        if (!Wishlist.Contains(item))
            Wishlist.Add(item);
        ShowWishlistModal = true;
    }

    void ToggleWishlistModal() => ShowWishlistModal = !ShowWishlistModal;

    /* ------------------- LOGIN ------------------- */
    private bool ShowLoginModal = false;
    private UserModel LoginUser = new();
    private bool LoginSuccess = false;
    private string LoginError = "";

    private async Task HandleLogin()
    {
        LoginSuccess = false;
        LoginError = "";

        try
        {
            await Conn.OpenAsync();
            var cmd = new NpgsqlCommand(@"
                SELECT username FROM Users
                WHERE username=@u AND password_hash = crypt(@p, password_hash);
            ", Conn);

            cmd.Parameters.AddWithValue("@u", LoginUser.Username ?? "");
            cmd.Parameters.AddWithValue("@p", LoginUser.CPassword ?? "");

            var result = await cmd.ExecuteScalarAsync();
            await Conn.CloseAsync();

            if (result != null)
            {
                LoginSuccess = true;
                await Task.Delay(900);
                ShowLoginModal = false;
                LoginUser = new UserModel();
            }
            else
            {
                LoginError = "Invalid username or password.";
            }
        }
        catch
        {
            LoginError = "Login error.";
            try { await Conn.CloseAsync(); } catch { }
        }
    }

    /* ------------------- SIGNUP ------------------- */
    private bool ShowSignupModal = false;
    private UserModel SignupUser = new();
    private string SignupConfirm = "";
    private bool SignupSuccess = false;
    private string SignupError = "";

    private async Task HandleSignup()
    {
        SignupSuccess = false;
        SignupError = "";

        if (SignupUser.CPassword != SignupConfirm)
        {
            SignupError = "Passwords do not match.";
            return;
        }

        try
        {
            await Conn.OpenAsync();
            var cmd = new NpgsqlCommand(@"
                INSERT INTO Users(username, password_hash)
                VALUES(@u, crypt(@p, gen_salt('bf')));
            ", Conn);

            cmd.Parameters.AddWithValue("@u", SignupUser.Username ?? "");
            cmd.Parameters.AddWithValue("@p", SignupUser.CPassword ?? "");

            await cmd.ExecuteNonQueryAsync();

            SignupSuccess = true;
            await Task.Delay(900);
            ShowSignupModal = false;

            SignupUser = new UserModel();
            SignupConfirm = "";
        }
        catch (PostgresException ex) when (ex.SqlState == "23505")
        {
            SignupError = "Username already exists.";
        }
        catch
        {
            SignupError = "Signup failed.";
        }
        finally
        {
            try { await Conn.CloseAsync(); } catch { }
        }
    }

    /* ------------------- MODELS ------------------- */
    public class UserModel
    {
        public string Username { get; set; } = "";
        public string CPassword { get; set; } = "";
    }

    /* ------------------- REVIEWS ------------------- */
    private class ReviewModel
    {
        public string Name { get; set; } = "";
        public int Stars { get; set; }
        public string Text { get; set; } = "";
    }

    private List<ReviewModel> Reviews = new();
    private string ReviewName = "";
    private string ReviewText = "";
    private int ReviewStars = 0;

    void SubmitReview()
    {
        if (string.IsNullOrWhiteSpace(ReviewName)
            || string.IsNullOrWhiteSpace(ReviewText)
            || ReviewStars == 0)
            return;

        Reviews.Insert(0, new ReviewModel
        {
            Name = ReviewName,
            Stars = ReviewStars,
            Text = ReviewText
        });

        ReviewName = "";
        ReviewText = "";
        ReviewStars = 0;
    }
}
