<!-- ================= REVIEWS ================= -->
<section id="reviews">
    <h2>Customer Reviews</h2>

    <div class="card">
        <h3>Write a Review</h3>

        <input class="form-control" placeholder="Your Name" @bind="ReviewName" />

        <label>Rating:</label>
        <div>
            @for (int i = 1; i <= 5; i++)
            {
                <span class="star"
                      style="font-size:28px;cursor:pointer;color:@(i <= ReviewStars ? "#f4b400" : "#ccc")"
                      @onclick="() => ReviewStars = i">★</span>
            }
        </div>

        <textarea class="form-control" style="height:100px"
                  placeholder="Write your review..."
                  @bind="ReviewText"></textarea>

        <button class="go-btn" @onclick="SubmitReview">Submit Review</button>
    </div>

    <h3 style="margin-top:20px;">Recent Reviews</h3>

    @if (Reviews.Count == 0)
    {
        <p>No reviews yet — be the first!</p>
    }
    else
    {
        <div class="grid">
            @foreach (var r in Reviews)
            {
                <div class="review-card">
                    <strong>@r.Name</strong>
                    <div style="color:#f4b400;font-size:20px;margin:6px 0;">
                        @(new string('★', r.Stars) + new string('☆', 5 - r.Stars))
                    </div>
                    <p>@r.Text</p>
                </div>
            }
        </div>
    }
</section>



