@page "/"
@rendermode InteractiveServer

<PageTitle>Home - Pure Aura</PageTitle>

<style>
    body {
        font-family: Inter, sans-serif;
        margin: 0;
        background: #faf8f6;
        color: #222;
    }

    header {
        position: sticky;
        top: 0;
        z-index: 1000;
        padding: 1rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: #ffffffcc;
        backdrop-filter: blur(6px);
        border-bottom: 1px solid #e5e5e5;
    }

    .logo {
        font-size: 1.6rem;
        font-weight: 700;
        color: #b08b6c;
    }

    nav a {
        margin-left: 1rem;
        text-decoration: none;
        color: #222;
        font-weight: 500;
    }

    .hero {
        padding: 3rem 2rem;
        text-align: center;
    }

        .hero h1 {
            margin: 0;
            font-size: 3rem;
            color: #b08b6c;
        }

    .placeholder {
        width: 100%;
        height: 250px;
        background: #ddd;
        border-radius: 10px;
        display: flex;
        justify-content: center;
        align-items: center;
        color: #777;
        font-size: 1.1rem;
        margin-bottom: 1rem;
    }

    section {
        padding: 2rem;
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 1rem;
    }

    .card {
        background: white;
        padding: 1rem;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
    }

    footer {
        text-align: center;
        padding: 2rem;
        background: #fff;
        border-top: 1px solid #e5e5e5;
        margin-top: 2rem;
    }

    .go-btn {
        padding: 12px 25px;
        background: #b08b6c;
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        cursor: pointer;
        transition: 0.2s;
    }

        .go-btn:hover {
            background: #957558;
        }

    /* Floating Cart Button */
    .floating-cart {
        position: fixed;
        bottom: 20px;
        right: 20px;
        background: #b08b6c;
        color: white;
        padding: 15px 20px;
        border-radius: 50px;
        cursor: pointer;
        font-weight: bold;
        box-shadow: 0 4px 10px rgba(0,0,0,0.15);
    }

    /* Modal */
    .modal-bg {
        position: fixed;
        inset: 0;
        background: rgba(0,0,0,0.4);
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .modal-box {
        background: white;
        padding: 2rem;
        border-radius: 10px;
        width: 350px;
    }
</style>

<header>
    <div class="logo">Pure Aura</div>
    <nav>
        <a href="#collections">Collections</a>
        <a href="#featured">Featured</a>
        <a href="#about">About</a>
        <a href="#login-section">Login</a>
        <a href="#contact">Contact</a>
    </nav>
</header>

<div class="floating-cart" @onclick="ToggleCartModal">
    Cart (@Cart.Count)
</div>

<section class="hero">
    <h1>Pure Aura</h1>
    <p>Timeless handcrafted jewelry designed to shine with your natural aura.</p>
    <div class="placeholder">Hero Image Placeholder</div>
</section>

<section id="collections">
    <h2>Collections</h2>
    <div class="grid">
        <div class="card">
            <div class="placeholder">Image Placeholder</div>
            <h3>Everyday Essentials</h3>
            <p>Sleek minimal pieces for daily wear.</p>
        </div>
        <div class="card">
            <div class="placeholder">Image Placeholder</div>
            <h3>Bridal Glow</h3>
            <p>Elegant jewelry for special moments.</p>
        </div>
        <div class="card">
            <div class="placeholder">Image Placeholder</div>
            <h3>Statement Gems</h3>
            <p>Bold pieces that stand out.</p>
        </div>
    </div>
</section>

<section id="featured">
    <h2>Featured Jewelry</h2>
    <div class="grid">
        <div class="card">
            <div class="placeholder">Product Image</div>
            <h4>Luna Necklace</h4>
            <p>Freshwater pearl • gold finish</p>
            <strong>$149</strong>
            <button class="go-btn" @onclick="() => AddToCart('Luna Necklace')">Add to Cart</button>
        </div>
        <div class="card">
            <div class="placeholder">Product Image</div>
            <h4>Sol Ring</h4>
            <p>Sterling silver • hammered texture</p>
            <strong>$89</strong>
            <button class="go-btn" @onclick="() => AddToCart('Sol Ring')">Add to Cart</button>
        </div>
        <div class="card">
            <div class="placeholder">Product Image</div>
            <h4>Aster Earrings</h4>
            <p>Rose gold minimalist studs</p>
            <strong>$119</strong>
            <button class="go-btn" @onclick="() => AddToCart('Aster Earrings')">Add to Cart</button>
        </div>
    </div>
</section>
<footer id="contact">
    <p><strong>Contact Us</strong></p>
    <p>Email: hello@pureaura.example</p>
    <p>Phone: +1 (555) 123-4567</p>
    <br>
    <p>© 2025 Pure Aura. All rights reserved.</p>
</footer>

<!-- LOGIN MODAL TRIGGER SECTION -->
<section id="login-section">
    <h2>Login</h2>
    <button class="go-btn" @onclick="() => ShowLoginModal = true">Open Login</button>
</section>

<!-- LOGIN MODAL -->
@if (ShowLoginModal)
{
    <div class="modal-bg">
        <div class="modal-box">
            <h3>Login</h3>
            <EditForm Model="@Users" OnValidSubmit="@HandleSubmit">
                <DataAnnotationsValidator />

                <div class="mb-3">
                    <label>Username:</label>
                    <InputText @bind-Value="Users.Username" class="form-control" />
                    <ValidationMessage For="@(() => Users.Username)" />
                </div>

                <div class="mb-3">
                    <label>Password:</label>
                    <InputText @bind-Value="Users.CPassword" type="password" class="form-control" />
                    <ValidationMessage For="@(() => Users.CPassword)" />
                </div>

                <button class="go-btn" type="submit">Submit</button>
                <button class="go-btn" style="margin-left:10px;background:#777" @onclick="() => ShowLoginModal = false">Cancel</button>
            </EditForm>

            @if (showSuccess)
            {
                <div class="alert alert-success mt-4">
                    Hello <strong>@Users.Username</strong>! Login successful.
                </div>
            }
        </div>
    </div>
}

<!-- CART MODAL -->
@if (ShowCartModal)
{
    <div class="modal-bg">
        <div class="modal-box">
            <h3>Your Cart</h3>

            @if (Cart.Count == 0)
            {
                <p>Your cart is empty.</p>
            }
            else
            {
                <ul>
                    @foreach (var item in Cart)
                    {
                        <li>@item</li>
                    }
                </ul>
            }

            <button class="go-btn" @onclick="() => ShowCartModal = false">Close</button>
        </div>
    </div>
}

@code {
    [Inject] NavigationManager Navigation { get; set; }

    private List<string> Cart = new();
    private bool ShowCartModal = false;
    private bool ShowLoginModal = false;

    void AddToCart(string itemName)
    {
        Cart.Add(itemName);
    }

    void ToggleCartModal()
    {
        ShowCartModal = !ShowCartModal;
    }

    void GoToCounter()
    {
        Navigation.NavigateTo("/Market");
    }

    private UserModel Users = new();
    private bool showSuccess = false;

    private void HandleSubmit()
    {
        showSuccess = true;
    }

    public class UserModel
    {
        public string Username { get; set; } = string.Empty;
        public string CPassword { get; set; } = string.Empty;
    }
}
