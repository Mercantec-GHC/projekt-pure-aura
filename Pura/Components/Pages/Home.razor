<!-- ================= LOGIN MODAL ================= -->
@if (ShowLoginModal)
{
    <div class="modal-bg">
        <div class="modal-box">
            <h3>Login</h3>

            <EditForm Model="@LoginUser" OnValidSubmit="@HandleLogin">
                <DataAnnotationsValidator />

                <label>Username:</label>
                <InputText @bind-Value="LoginUser.Username" class="form-control" />

                <label>Password:</label>
                <InputText @bind-Value="LoginUser.CPassword" type="password" class="form-control" />

                @if (!string.IsNullOrEmpty(LoginError))
                {
                    <div style="color:red">@LoginError</div>
                }

                @if (LoginSuccess)
                {
                    <div style="color:green">Login successful! Redirecting...</div>
                }

                <button class="go-btn" type="submit">Login</button>
                <button class="go-btn" style="margin-left:10px;background:#777"
                        @onclick="() => ShowLoginModal = false">
                    Cancel
                </button>
            </EditForm>
        </div>
    </div>
}



<!-- ================= SIGNUP MODAL ================= -->
@if (ShowSignupModal)
{
    <div class="modal-bg">
        <div class="modal-box">
            <h3>Sign Up</h3>

            <EditForm Model="@SignupUser" OnValidSubmit="@HandleSignup">
                <DataAnnotationsValidator />

                <label>Username:</label>
                <InputText @bind-Value="SignupUser.Username" class="form-control" />

                <label>Password:</label>
                <InputText @bind-Value="SignupUser.CPassword" type="password" class="form-control" />

                <label>Confirm Password:</label>
                <InputText @bind-Value="SignupConfirm" type="password" class="form-control" />

                @if (!string.IsNullOrEmpty(SignupError))
                {
                    <div style="color:red">@SignupError</div>
                }

                @if (SignupSuccess)
                {
                    <div style="color:green">Account created! You can now login.</div>
                }

                <button class="go-btn" type="submit">Sign Up</button>
                <button class="go-btn" style="margin-left:10px;background:#777"
                        @onclick="() => ShowSignupModal = false">
                    Cancel
                </button>
            </EditForm>
        </div>
    </div>
}


@code {
    /* ---------------- CART ---------------- */
    private List<string> Cart = new();
    private bool ShowCartModal = false;
    void AddToCart(string itemName) => Cart.Add(itemName);
    void ToggleCartModal() => ShowCartModal = !ShowCartModal;

    /* ---------------- WISHLIST ---------------- */
    private List<string> Wishlist = new();
    private bool ShowWishlistModal = false;

    void AddToWishlist(string itemName)
    {
        if (!Wishlist.Contains(itemName))
            Wishlist.Add(itemName);
    }

    void ToggleWishlistModal() => ShowWishlistModal = !ShowWishlistModal;

    /* ---------------- LOGIN ---------------- */
    private bool ShowLoginModal = false;
    private UserModel LoginUser = new();
    private bool LoginSuccess = false;
    private string LoginError = "";

    private async Task HandleLogin()
    {
        LoginError = "";
        LoginSuccess = false;

        await Conn.OpenAsync();
        using var cmd = new NpgsqlCommand(@"
            SELECT username
            FROM Users
            WHERE username=@u AND password_hash = crypt(@p, password_hash);
        ", Conn);

        cmd.Parameters.AddWithValue("@u", LoginUser.Username);
        cmd.Parameters.AddWithValue("@p", LoginUser.CPassword);

        var result = await cmd.ExecuteScalarAsync();
        await Conn.CloseAsync();

        if (result != null)
        {
            LoginSuccess = true;
            await Task.Delay(1000);
            ShowLoginModal = false;
        }
        else
        {
            LoginError = "Invalid username or password.";
        }
    }

    /* ---------------- SIGNUP ---------------- */
    private bool ShowSignupModal = false;
    private UserModel SignupUser = new();
    private string SignupConfirm = "";
    private bool SignupSuccess = false;
    private string SignupError = "";

    private async Task HandleSignup()
    {
        SignupError = "";
        SignupSuccess = false;

        if (SignupUser.CPassword != SignupConfirm)
        {
            SignupError = "Passwords do not match.";
            return;
        }

        await Conn.OpenAsync();
        try
        {
            using var cmd = new NpgsqlCommand(@"
                INSERT INTO Users(username, password_hash)
                VALUES(@u, crypt(@p, gen_salt('bf')));", Conn);

            cmd.Parameters.AddWithValue("@u", SignupUser.Username);
            cmd.Parameters.AddWithValue("@p", SignupUser.CPassword);

            await cmd.ExecuteNonQueryAsync();
            SignupSuccess = true;

            await Task.Delay(1000);
            ShowSignupModal = false;
        }
        catch (PostgresException ex) when (ex.SqlState == "23505")
        {
            SignupError = "Username already exists.";
        }
        await Conn.CloseAsync();
    }

    /* ---------------- MODELS ---------------- */
    public class UserModel
    {
        public string Username { get; set; } = "";
        public string CPassword { get; set; } = "";
    }

    /* ---------------- REVIEWS ---------------- */
    private class ReviewModel
    {
        public string Name { get; set; } = "";
        public int Stars { get; set; }
        public string Text { get; set; } = "";
    }

    private List<ReviewModel> Reviews = new();
    private string ReviewName = "";
    private string ReviewText = "";
    private int ReviewStars = 0;

    void SubmitReview()
    {
        if (string.IsNullOrWhiteSpace(ReviewName) ||
            string.IsNullOrWhiteSpace(ReviewText) ||
            ReviewStars == 0)
            return;

        Reviews.Add(new ReviewModel
        {
            Name = ReviewName,
            Stars = ReviewStars,
            Text = ReviewText
        });

        ReviewName = "";
        ReviewText = "";
        ReviewStars = 0;
    }
}
