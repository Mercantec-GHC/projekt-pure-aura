<!-- LOGIN MODAL -->
@if (ShowLoginModal)
{
    <div class="modal-bg" @onclick="() => ShowLoginModal = false">
        <div class="modal-box" @onclick:stopPropagation>
            <h3>Login</h3>

            <EditForm Model="@LoginUser" OnValidSubmit="@HandleLogin">
                <DataAnnotationsValidator />

                <label style="font-weight:600">Username:</label>
                <InputText @bind-Value="LoginUser.Username" class="form-control" />

                <label style="font-weight:600">Password:</label>
                <InputText @bind-Value="LoginUser.CPassword" type="password" class="form-control" />

                @if (!string.IsNullOrEmpty(LoginError))
                {
                    <div style="color:#ff6b6b;margin-top:.5rem;">@LoginError</div>
                }

                @if (LoginSuccess)
                {
                    <div style="color:#9be19b;margin-top:.5rem;">Login successful!</div>
                }

                <div style="display:flex;gap:.6rem;margin-top:.8rem;">
                    <button class="go-btn" type="submit">Login</button>
                    <button class="go-btn" style="background:#777;color:#fff" @onclick="() => ShowLoginModal = false">Cancel</button>
                </div>
            </EditForm>
        </div>
    </div>
}

