@using System.Globalization

@code {
    [Parameter]
    public Product Product { get; set; } = default!;
}

<div class="card">
    <div class="card-body">
        <h3>@(Product?.Name ?? "Unnamed product")</h3>

        @if (!string.IsNullOrWhiteSpace(Product?.Description))
        {
            <p>@Product.Description</p>
        }

        <div class="card-footer">
            <span class="pris">@Product.Price.ToString("C", CultureInfo.CurrentCulture)</span>
            <span class="dato">ID: @Product.Id</span>
        </div>
    </div>
</div>

<style>
    .card {
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 16px;
        margin: 12px 0;
        box-shadow: 1px 2px 12px rgba(0,0,0,0.06);
        max-width: 400px;
        background: #fafafa;
    }

    .card-body {
        padding: 0;
    }

    .card-footer {
        display: flex;
        justify-content: space-between;
        margin-top: 12px;
        font-size: 0.95em;
        color: #666;
    }

    .pris {
        font-weight: bold;
        color: #2a934f;
    }

    .dato {
        font-style: italic;
    }
</style>
