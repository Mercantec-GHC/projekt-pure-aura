@page "/"
@rendermode InteractiveServer

<style>
    body {
        font-family: Inter, sans-serif;
        margin: 0;
        background: #faf8f6;
        color: #222;
    }

    header {
        padding: 1rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: #ffffffcc;
        backdrop-filter: blur(6px);
        border-bottom: 1px solid #e5e5e5;
    }

    .logo {
        font-size: 1.6rem;
        font-weight: 700;
        color: #b08b6c;
    }

    nav a {
        margin-left: 1rem;
        text-decoration: none;
        color: #222;
        font-weight: 500;
    }

    .hero {
        padding: 3rem 2rem;
        text-align: center;
    }

        .hero h1 {
            margin: 0;
            font-size: 3rem;
            color: #b08b6c;
        }

    .placeholder {
        width: 100%;
        height: 250px;
        background: #ddd;
        border-radius: 10px;
        display: flex;
        justify-content: center;
        align-items: center;
        color: #777;
        font-size: 1.1rem;
        margin-bottom: 1rem;
    }

    section {
        padding: 2rem;
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 1rem;
    }

    .card {
        background: white;
        padding: 1rem;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
    }

    footer {
        text-align: center;
        padding: 2rem;
        background: #fff;
        border-top: 1px solid #e5e5e5;
        margin-top: 2rem;
    }
</style>

<header>
    <div class="logo">Pure Aura</div>
    <nav>
